   <script>
      function Save()
      {
          var o = new Object();
      
          o[ 'source' ] = editor.getValue();
          console.log( 'PARAM', o );
                
          $.post( "id.prg", o )
            .done( function( data ) { console.log( 'DONE', data ); location.href="id.prg?" + data; } )
            .fail( function( data ) { console.log( 'ERROR', data ); } ); 
      }

      var nWnd = 1;

      function Command( cMsg, cTitle )
      {  
         var cId = "command" + nWnd++;

         $( '<div class="form" id="' + cId + '" style="position: absolute;width: 700px;height: 400px;' + 
            'top: 375px;left: 1016px;background-color:silver;box-shadow:5px 5px 5px 0, 0px 0px 5px 0;' + 
            'border-radius:5px;"></div>' ).appendTo( "#main" );
         
         $( "#" + cId ).draggable().click(function(){
            if( $(this).is('.ui-draggable-dragging') ) {
                  return;
            }
            $(".form").css( "z-index", 1 );
            $(this).css( "z-index", nWnd - 1 );
         });
      }

      function CloseAllForms()
      {
         nWnd = 1; 
         $(".form").remove();
      }

      var oFPicker;

      function OpenPrg()
      { 
        oFPicker = document.createElement( "input" );
        oFPicker.type = "file";
        oFPicker.accept = ".prg,.ch,.view";
        oFPicker.style.visibility = "hidden";
        oFPicker.onchange = { function( evt ){ alert( this.files[0] ) } };
        oFPicker.click(); 
      } 

      function OpenDbf()
      { 
        oFPicker = document.createElement( "input" );
        oFPicker.type = "file";
        oFPicker.accept = ".dbf";
        oFPicker.style.visibility = "hidden";
        oFPicker.onchange = { function( evt ){ alert( this.files[0] ) } };
        oFPicker.click(); 
      } 
   </script>  
